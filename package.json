    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^20.0.11",
    "postcss": "^8.5.3",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.8.3",
    "vite": "^7.1.2",
    "vite-plugin-pwa": "^1.0.3",
    "vite-plugin-webfont-dl": "^3.11.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.1.8",
    "wrangler": "^4.45.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
